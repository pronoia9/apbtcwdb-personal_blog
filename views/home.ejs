<%- include('partials/header'); -%>

<h1>Home</h1>
<p><%= homeStartingContent %></p>

<% posts.forEach(function(post) { %>
  <div>
    <h2><%= post.title %></h2>
    <% let maxPostLength = 100; %>
    <% if (post.content.length > maxPostLength) { %>
      <p><%= post.content.slice(0, maxPostLength); %> ... <a href="post/<%= post._id %>">Read More</a></p>
    <% } else { %>
      <p><%= post.content %></p>
    <% } %>
  </div>
<% }); %>

<%- include('partials/footer'); -%>
