<%- include('partials/header'); -%>

<h1>Home</h1>
<p><%= homeStartingContent %></p>

<% posts.forEach(function(post) { %>
  <div class="">
    <h2 class=""><%= post.title %></h2>
    <% let maxPostLength = 100; %>
    <% if (post.content.length >= maxPostLength) { %>
      <% let text = post.content.slice(0, maxPostLength); %>
      <p><%= text %> ... <a href="">Read More</a></p>
    <% } %>
  </div>
<% }); %>

<%- include('partials/footer'); -%>
