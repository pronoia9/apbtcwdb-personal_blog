<%- include('partials/header'); -%>

<h1>Compose</h1>

<form class="" action="/compose" method="post">
  <div class="mb-3">
    <label class="form-label" for="postTitle">Title</label>
    <input class="form-control" id="postTitle" type="text" name="postTitle">
  </div>

  <div class="mb-3">
    <label class="form-label" for="postInput">Post</label>
    <textarea class="form-control" id="postInput" name="postInput" rows="8" cols="80"></textarea>
  </div>

  <button class="btn btn-primary" type="submit" name="postButton">Publish</button>
</form>

<%- include('partials/footer'); -%>
